{-# LANGUAGE JavaScriptFFI #-}
module System.Cordova.FileSystem
( <%= dirs.join(', ') %>
, Storage(..)
, FileErrorCode(..)
, FileSystem_, FileSystem
, requestFileSystem
, Entry_, Entry
, root, filesystem
