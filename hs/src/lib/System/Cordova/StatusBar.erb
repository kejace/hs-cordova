<%
require File.expand_path(File.dirname(__FILE__) + '/../../../../rb/data.rb')
%>
{-# LANGUAGE JavaScriptFFI #-}
module System.Cordova.StatusBar
( overlaysWebView
, styleDefault, styleLightContent, styleBlackTranslucent, styleBlackOpaque
, backgroundColorByName, backgroundColorByHexString
, hideBar, showBar, isVisible
) where

<%= hsImports %>

<%= jsImport('StatusBar.overlaysWebView($1);', ['Bool'], '()') %>

<% %w{styleDefault styleLightContent styleBlackTranslucent styleBlackOpaque}.each do |s| %>
<%= jsImport("StatusBar.#{s}();", [], '()') %>
<% end %>

<% %w{backgroundColorByName backgroundColorByHexString}.each do |s| %>
<%= jsImport("StatusBar.#{s}($1);", ['String'], '()') %>
<% end %>

<%= jsImport("StatusBar.hide();", [], '()', hsName: 'hideBar') %>
<%= jsImport("StatusBar.show();", [], '()', hsName: 'showBar') %>
<%= jsImport('StatusBar.isVisible', [], 'Bool') %>
