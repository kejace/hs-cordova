<%
require File.expand_path(File.dirname(__FILE__) + '/../../../../rb/data.rb')
%>
module System.Cordova.Vibration
( vibrate
, vibrateFor
, vibratePattern
, vibrateCancel
) where

<%= hsImports %>

<%= jsImport('vibrate'       , 'navigator.vibrate();'  , []       , '()') %>
<%= jsImport('vibrateFor'    , 'navigator.vibrate($1);', ['Int']  , '()') %>
<%= jsImport('vibratePattern', 'navigator.vibrate($1);', ['[Int]'], '()') %>

vibrateCancel :: IO ()
vibrateCancel = vibrateFor 0
